{
  "name": "backend",
  "version": "1.0.0",
  "description": "backend - conservatory app - manage your students",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --testTimeout=10000 --detectOpenHandles",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage"
  },
  "jest": {
    "transform": {
      "^.+\\.js$": [
        "babel-jest",
        {
          "configFile": "./babel.config.js"
        }
      ]
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!.*\\.mjs$)"
    ],
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.(js|jsx)$": "$1"
    },
    "testMatch": [
  "**/tests/**/*test*.js",
  "!**/tests/fixtures/**",
  "!**/tests/mocks/**",
  "!**/tests/setup-test-server.js",
  "!**/tests/test-db-config.js",
  "!**/tests/school-year.fixtures.js"
],
    "setupFilesAfterEnv": [
      "./jest.setup.js"
    ],
    "testTimeout": 30000
  },
  "author": "Yehonatan Yeshayahu",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.758.0",
    "@aws-sdk/lib-storage": "^3.758.0",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.0.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.13.0",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "babel-jest": "^29.7.0",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.1.4",
    "nodemon": "^3.1.9",
    "supertest": "^7.0.0"
  }
}
